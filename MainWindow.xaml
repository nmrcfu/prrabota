<Window x:Class="gyokeres.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gyokeres"
        mc:Ignorable="d"
        Title="MainWindow" Height="780" Width="540">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="AddProductButton" Content="Добавить продукт" HorizontalAlignment="Left" Height="55" Grid.Row="2" VerticalAlignment="Top" Width="164" Click="AddProductButton_Click" Margin="193,20,0,0" FontFamily="Bahnschrift SemiBold Condensed" BorderBrush="#FF000400" Background="#FF11C314" FontSize="22"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="54" Margin="58,17,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Название продукта" VerticalAlignment="Top" Width="144" RenderTransformOrigin="0.631,1.125" FontFamily="Bahnschrift SemiBold Condensed" Background="#FFCECACA"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Center" Height="54" Margin="0,17,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Стоимость продукта" VerticalAlignment="Top" Width="85" Background="#FFD4CECE" FontFamily="Bahnschrift SemiBold Condensed"/>
        <TextBlock x:Name="ErrorTextBlock" Foreground="Black" Margin="10,200,0,0" />
        <ListBox x:Name="ProductListBox" Margin="345,191,10,0" Grid.RowSpan="2" FontFamily="Bahnschrift SemiCondensed" FontSize="14" />
        </Grid>
</Window>
